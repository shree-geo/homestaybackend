{
  "info": {
    "name": "GrihaStay API",
    "description": "Complete API collection for GrihaStay Homestay Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "property_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "room_type_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "booking_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register Tenant",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_name\": \"Test Homestay\",\n  \"contact_email\": \"contact@test.com\",\n  \"user_name\": \"admin\",\n  \"email\": \"admin@test.com\",\n  \"password\": \"Admin@123\",\n  \"full_name\": \"Test Admin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["auth", "register", ""]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_name\": \"admin\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", ""]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"YOUR_REFRESH_TOKEN\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["auth", "token", "refresh", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Properties",
      "item": [
        {
          "name": "List Properties",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/properties/",
              "host": ["{{base_url}}"],
              "path": ["properties", ""]
            }
          }
        },
        {
          "name": "Create Property",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Mountain View Villa\",\n  \"description\": \"Beautiful villa\",\n  \"address\": \"Pokhara, Nepal\",\n  \"currency\": \"NPR\",\n  \"status\": \"LISTED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/properties/",
              "host": ["{{base_url}}"],
              "path": ["properties", ""]
            }
          }
        },
        {
          "name": "Get Property",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/properties/{{property_id}}/",
              "host": ["{{base_url}}"],
              "path": ["properties", "{{property_id}}", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Room Types",
      "item": [
        {
          "name": "List Room Types",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/room-types/",
              "host": ["{{base_url}}"],
              "path": ["room-types", ""]
            }
          }
        },
        {
          "name": "Create Room Type",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"property\": \"{{property_id}}\",\n  \"name\": \"Deluxe Room\",\n  \"max_occupancy\": 2,\n  \"default_base_price\": 5000,\n  \"currency\": \"NPR\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/room-types/",
              "host": ["{{base_url}}"],
              "path": ["room-types", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "List Bookings",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/bookings/",
              "host": ["{{base_url}}"],
              "path": ["bookings", ""]
            }
          }
        },
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"property\": \"{{property_id}}\",\n  \"room_type\": \"{{room_type_id}}\",\n  \"checkin\": \"2025-01-20\",\n  \"checkout\": \"2025-01-22\",\n  \"guests_count\": 2,\n  \"total_amount\": 10000,\n  \"currency\": \"NPR\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/bookings/",
              "host": ["{{base_url}}"],
              "path": ["bookings", ""]
            }
          }
        },
        {
          "name": "Confirm Booking",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/bookings/{{booking_id}}/confirm/",
              "host": ["{{base_url}}"],
              "path": ["bookings", "{{booking_id}}", "confirm", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/users/",
              "host": ["{{base_url}}"],
              "path": ["users", ""]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{access_token}}"}],
            "url": {
              "raw": "{{base_url}}/users/me/",
              "host": ["{{base_url}}"],
              "path": ["users", "me", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health/",
          "host": ["{{base_url}}"],
          "path": ["health", ""]
        }
      }
    }
  ]
}
